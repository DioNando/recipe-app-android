<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/favorite_list_container"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView_favorite_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Element"
                android:textColor="?attr/colorTertiary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_favorite_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum"
                android:layout_marginBottom="5dp"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/textView_favorite_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum"
                android:textSize="12sp" />


        </LinearLayout>

        <ImageButton
            android:id="@+id/button_favorite_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:padding="7dp"
            app:srcCompat="@drawable/icon_delete_24px"
            app:tint="?attr/colorError" />

    </LinearLayout>

</androidx.cardview.widget.CardView>